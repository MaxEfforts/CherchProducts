@model DbModels.Model.ProductModel
@{

    Layout = "";
}
<form enctype="multipart/form-data" asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this,'AddNew','view-all'); ">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*<input type="hidden" asp-for="Id" />*@
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                    <input asp-for="ProductPrice" class="form-control" />
                </div>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
            @*<div class="form-group">
                <a class="btn btn-success btn-block" id="closeFormAddEdit">Close</a>
            </div>*@
           
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="photoUrl" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="photoUrl" id="customFile" onchange="FileOnChange(this, 'ImageUpload');" class="form-control custom-file-input" />
                    <span class="custom-file-label">Chose Photo...</span>
                    <span asp-validation-for="photoUrl" class="text-danger"></span>
                </div>
                <!--<div class="custom-filemb-2 m-3">
                    <input asp-for="photoUrl" type="file" onchange="FileOnChange(this, 'ImageUpload');" name="Image" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>-->
                @*<span asp-validation-for="Offer.ImagePath"></span>*@
                <img src="~/images/download.png" id="ImageUpload" class="rounded" width="250" />
            </div>
        </div>
    </div>
    <hr />
</form>

