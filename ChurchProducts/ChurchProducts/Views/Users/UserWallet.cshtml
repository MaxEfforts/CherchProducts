@model DbModels.ViewModels.UserWallet
@{
    Layout = "";
}
<form asp-controller="Users" asp-action="AddOrEditWallet" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this,'AddNew','view-all'); ">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </div>

    </div>
    <hr />
</form>

