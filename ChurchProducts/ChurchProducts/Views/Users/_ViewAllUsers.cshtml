@using DbModels.Identity;
@model IEnumerable<ApplicationUser>

<div class="col-md-12 ">

    <h1 class="text-center"><i class="fas fa-user text-success"></i>  Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>

                </th>
                <th>

                </th>
                <th>

                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NormalizedUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("EditForm","Users",new {id=item.Id},Context.Request.Scheme)','Update User')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <a onclick="showInPopup('@Url.Action("GetUserWallet","Users",new {id=item.Id},Context.Request.Scheme)','User Wallet')" class="btn btn-primary text-white"><i class="fas fa-money"></i> Wallet</a>

                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="hidden" asp-for="@item.Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>

                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
